{

    "workbench.colorTheme": "One Monokai Python",
    "workbench.iconTheme": "vscode-icons",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc":true,
        "**/__pycache__":true,
        "**/.ipynb*":true
    },

    // COLOR SCHEME STUFF
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "support.function.builtin.python",
                "settings": {
                    "foreground": "#6ebaf8"
                },
            },
            {
                "scope": [
                            "meta.function-call.generic.python",
                            "entity.name.function"
                            ],
                "settings": {
                    "foreground": "#61AFEF"
                }
            },
            {
                "scope": "string.quoted.single.python",
                "settings": {
                    "foreground": "#ace591"
                }
            },
            {
                "scope": "string.quoted.docstring",
                "settings": {
                    "foreground": "#676F7D"
                }
            },
            {
                "scope": "punctuation.separator",
                "settings": {
                    "foreground": "#ffed89"
                }
            },
            {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#ff9a16"
                }
            },
        ]
        },
}
